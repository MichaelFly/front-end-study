
/*
公共头部
*/
.el-header {
  height: 60px;
  margin-bottom: 20px;
  background: #ffffff;
  box-shadow: 0px 2px 5px rgba(9, 101, 169, 0.16);
}

.title {
  line-height: 90px;
  color: #586d80;
  font-size: 16px;
  font-weight: bold
}
.headNav {
  position: relative;
  z-index: 9999;
  float: right;
  margin-right: 20px;
  margin-left :20px;
}
.headNav-img{
  margin-top: 26px;
}
.headNav-img i {
  display: inline-block;
  width: 38px;
  height: 38px;
  cursor: pointer;
  //background: url("./touxiang.png");
  overflow: hidden;
  border-radius : 19px;
  border: 1px solid #999;
}

.headNav-img s {
  display: inline-block;
  width: 8px;
  height: 38px;
  cursor: pointer;
  background: url("./arrUp.png");
  margin-left: 8px;
}
.Dropdown {

  z-index: 9999;
  background-color: #fff;
  width: 93px;
  padding: 6px;
  box-sizing: border-box;
  text-align: center;
  line-height: 36px;
  box-shadow: 3px 3px 20px #b0c7d1;
  position: absolute;
  right: -10px;
}

.Dropdown > li{
  cursor:pointer;
}

.Dropdown > li > a {
  color: #4d4d4d;
  display: inline-block;
  width: 100%;
  height: 100%;
}

.Dropdown > li.active,
.Dropdown > li:hover {
  background-color: rgb(39, 128, 201);
  color: #ffffff;
}

.Dropdown > li.active > a,
.Dropdown > li:hover > a {
  color: #ffffff;
}
